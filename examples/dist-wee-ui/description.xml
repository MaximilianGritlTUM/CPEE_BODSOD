<description datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes" xmlns="http://riddl.org/ns/description/1.0" xmlns:xi="http://www.w3.org/2001/XInclude">

  <message name="html">
    <parameter name="file" mimetype="application/xhtml+xml"/>
  </message>
  <message name="xhtml">
    <parameter name="file" mimetype="application/xhtml+xml"/>
  </message>
  <message name="xml">
    <parameter name="file" mimetype="text/xml"/>
  </message>
  <message name="url">
    <parameter name="file" mimetype="text/plain"/>
  </message>
  <message name="css">
    <parameter name="data" mimetype="text/css"/>
  </message>
  <message name="file">
    <parameter name="file" mimetype="*"/>
  </message>
  <message name="since">
    <parameter name="since" type="string"/>
  </message>
  <message name="log-format">
    <parameter name="stamp" type="string"/>
    <parameter name="type" type="string"/>
    <parameter name="details" type="string"/>
  </message>
  <message name="pos">
      <parameter name="pos" type="string"/>
  </message>

  <resource>
    <get in="*" out="xhtml"/>
    <resource>
      <get in="*" out="html"/>
      <resource relative="monitor">
        <get in="since" out="xml"/>
        <post in="log-format"/>
        <resource relative="actpos">
            <get in="*" out="pos"/>
        </resource>
      </resource>
    </resource>
    <resource relative="monitor">
      <get in="since" out="xml"/>
    </resource>
    <resource relative="remote">
      <get in="*" out="url"/>
    </resource>
    <resource relative="styles" recursive="true">
      <get in="*" out="css"/>
    </resource>
    <resource relative="static" recursive="true"> 
      <get in="*" out="file"/>
    </resource>
  </resource>
</description>

#!/usr/bin/ruby
require '../../../riddl/lib/ruby/client'
require 'socket'
require 'pp'

t = Thread.new do
  puts `rackup declaration.ru`
end

up = false
until up
  begin
    TCPSocket.new('localhost', 9292)
    up = true
  rescue => e
    sleep 0.1
  end  
end

begin
  props = Riddl::Client.new("http://localhost:9292/","declaration.xml")

  test = props.resource("/")
  status, res = test.post [
    Riddl::Parameter::Simple.new("name","maria")
  ]
  #test = props.resource("/2")
  #status, res = test.delete

  puts status
  p "----"
  p res
  p "----"
  #res.each do |r|
  #  puts r.value.read if r.value.respond_to?(:read)
  #end  
ensure  
  `pkill rackup`
  t.join
end

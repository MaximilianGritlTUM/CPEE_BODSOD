<properties xmlns="http://riddl.org/ns/common-patterns/properties/1.0">
  <info type="simple" modifiable="false" mutable="false">
    <text/>
  </info>
  <handlerwrapper type="simple" modifiable="true">
    <data type="string">
      <param name="pattern">[A-Z][a-zA-Z]*</param>
    </data>  
  </handlerwrapper>
  <dsl type="simple" modifiable="false" mutable="false">
    <text/>
  </dsl>
  <dslx type="arbitrary" modifiable="false" mutable="false"/>
  <description type="arbitrary" modifiable="true"/>
  <transformation type="complex" modifiable="true">
    <element name='description'>
      <attribute name='type'>
        <choice>
          <value>copy</value>
          <value>xslt</value>
          <value>rest</value>
        </choice>  
      </attribute>
      <data type="anyURI"/>
    </element>
    <element name='dataelements'>
      <attribute name='type'>
        <choice>
          <value>xslt</value>
          <value>rest</value>
        </choice>  
      </attribute>
      <data type="anyURI"/>
    </element>
    <element name='endpoints'>
      <attribute name='type'>
        <choice>
          <value>xslt</value>
          <value>rest</value>
        </choice>  
      </attribute>
      <data type="anyURI"/>
    </element>
  </transformation>
  <state type="state" modifiable="true">
    <ready>
      <running putable="true"/>
      <simulating putable="true"/>
    </ready>  
    <running>
      <stopping putable="true"/>
      <finished putable="false"/>
    </running>
    <simulating/>
    <stopping>
      <stopped putable="false"/>
    </stopping>
    <stopped>
      <running putable="true"/>
      <simulating putable="true"/>
    </stopped>  
    <finished/>
  </state>  
  <status type="complex" modifiable="false" mutable="false">
    <optional>
      <element name='id'>
        <data type="integer"/>
      </element>
      <element name='message'>
        <data type="string"/>
      </element>
    </optional>  
  </status>  
  <positions type="complex" modifiable="true">
    <zeroOrMore>
      <element>
        <anyName/>
        <data type="string">
          <param name="pattern">(at|after)(;[A-Za-z0-9]+)?</param>
        </data>  
      </element>
    </zeroOrMore>  
  </positions>  
  <dataelements type="complex" modifiable="true">
    <zeroOrMore>
      <element><anyName/><text/></element>
    </zeroOrMore>  
  </dataelements>  
  <endpoints type="complex" modifiable="true">
    <zeroOrMore>
      <element><anyName/><text/></element>
    </zeroOrMore>  
  </endpoints>
</properties>
